<p id="notice"><%= notice %></p>

<h1>Listing Admin Ideas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_ideas.each do |admin_idea| %>
      <tr>
        <td><%= link_to 'Show', admin_idea %></td>
        <td><%= link_to 'Edit', edit_admin_idea_path(admin_idea) %></td>
        <td><%= link_to 'Destroy', admin_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_admin_idea_path %>
