<%= form_for(@box) do |f| %>
    <% if @box.errors.any? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
          <p><%= t('manager.box.new.somethingwrong') %></p>
          <p>
            <% @box.errors.full_messages.each do |message| %>
                <%= t('field') %> <%= message %><br>
            <% end %>
          </p>
        </div>
    <% end %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
      <%= f.label :name, class: 'mdl-textfield__label' %>
      <%= f.text_field :name, class: 'mdl-textfield__input' %>
    </div>
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :description, class: 'mdl-textfield__label' %>
      <%= f.text_area :description, :rows => 10, :cols => 40, class: 'mdl-textfield__input' %>
    </div>
    <div class="actions">
      <%= f.submit I18n.t('manager.box.form.submit'), class: 'mdl-button mdl-js-button mdl-button--raised' %>
    </div>
<% end %>