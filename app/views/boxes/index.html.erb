<p id="notice"><%= notice %></p>

<h1>Listing Boxes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td>
          <h1><%= box.name %></h1>
          <p><%= box.description %></p>
          <p><%= box.user.email %></p>
        </td>
        <td><%= link_to 'Show', box %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
