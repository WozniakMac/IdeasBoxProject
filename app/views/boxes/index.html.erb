<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1><%= t('box.index.list') %></h1>
</div>


<div class="row">
  <div class="col-md-6">
    <h2><%= t('box.index.top') %></h2>
    <ul class="list-group">
      <% @boxes_top.each do |box| %>
      <li class="list-group-item">
        <span class="badge"><%= box.ideas_count %></span>
        <%= link_to box.name, box %><small> (<%= box.user %>)</small>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <h2><%= t('box.index.new') %></h2>
    <ul class="list-group">
    <% @boxes.each do |box| %>
        <li class="list-group-item">
          <span class="badge"><%= time_ago_in_words(box.created_at) %></span>
          <%= link_to box.name, box %><small> (<%= box.user %>)</small>
        </li>
    <% end %>
    </ul>
  </div>
</div>