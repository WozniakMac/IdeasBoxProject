<% content_for :css do %>
    <%= stylesheet_link_tag    'card-empty', media: 'all' %>
    <%= stylesheet_link_tag    'session', media: 'all' %>
<% end %>

<% content_for :title do %>
    <%= t('edit') %>
<% end %>

<% content_for :content do %>
    <div class="mdl-layout__tab-panel is-active mdl-grid ids-content" id="content">
      <div class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
        <div class="ids-session">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <% if false %>
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                    <%= f.label :username, class: 'mdl-textfield__label' %>
                    <%= f.text_field :username, autocomplete: "off", autofocus: true, class: 'mdl-textfield__input'  %>
                  </div>

                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                    <%= f.label :email, class: 'mdl-textfield__label' %>
                    <%= f.email_field :email, class: 'mdl-textfield__input' %>
                  </div>
              <% end %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div><%= t('devise.waitingconfirmation') %> <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                <%= f.label :password, class: 'mdl-textfield__label'%>
                <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
              </div>
              <i>(<%= t('leaveifnotchange') %>)</i>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %>
              </div>

              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                <%= f.label :current_password, class: 'mdl-textfield__label' %>
                <%= f.password_field :current_password, autocomplete: "off", class: 'mdl-textfield__input' %>
              </div>
              <i>(<%= t('weneedcurrent') %>)</i>

              <div class="actions">
                <%= f.submit I18n.t('update'), class: 'mdl-button mdl-js-button mdl-button--raised' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>

<% content_for :addbutton do %>
    <%= render "shared/navbar/button" %>
<% end %>

<% content_for :navbartop do %>
    <%= render "shared/navbar/top" %>
<% end %>