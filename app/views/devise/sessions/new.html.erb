<% content_for :css do %>
    <%= stylesheet_link_tag    'card-empty', media: 'all' %>
    <%= stylesheet_link_tag    'session', media: 'all' %>
<% end %>

<% content_for :title do %>
    <%= t('login') %>
<% end %>

<% content_for :content do %>
    <div class="mdl-layout__tab-panel is-active mdl-grid ids-content" id="content">
      <div class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
        <div class="ids-session">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
              <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
              <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                <%= f.label :email, class: 'mdl-textfield__label' %>
                <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
                <%= f.label :password, class: 'mdl-textfield__label'%>
                <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
              </div>
              <% if devise_mapping.rememberable? -%>
                    <%= f.label :remember_me, class: "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" do %>
                        <%= f.check_box :remember_me, class:"mdl-checkbox__input" %>
                        <span class="mdl-checkbox__label"><%= t('remember').capitalize %></span>
                    <% end %>
              <% end -%>

              <div class="ids-actions">
                <%= f.submit I18n.t('login'), class: 'mdl-button mdl-js-button mdl-button--raised' %>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
<% end %>

<% content_for :addbutton do %>
    <%= render "shared/navbar/button" %>
<% end %>

<% content_for :navbartop do %>
    <%= render "shared/navbar/top" %>
<% end %>