<%= form_for([@box,@idea]) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <p><%= t('somethingwrong') %></p>

      <p>
      <% @idea.errors.full_messages.each do |message| %>
            <%= t('field') %> <%= message %><br>
      <% end %>
      </p>
    </div>
  <% end %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
    <%= f.label :title, class: 'mdl-textfield__label' %>
    <%= f.text_field :title, class: 'mdl-textfield__input' %>
  </div>
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :description, class: 'mdl-textfield__label' %>
    <%= f.text_area :description, :rows => 5, :cols => 20, class: 'mdl-textfield__input' %>
  </div>
  <%= image_tag(@idea.photo.url(:thumb)) unless @idea.photo_file_name.nil?  %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ids-text-heigh">
    <%= f.label :photo, class: ''  %>
    <%= f.file_field :photo, class: '' %>
  </div>
  <div class="actions">
    <%= f.submit I18n.t('idea.submit'), class: 'mdl-button mdl-js-button mdl-button--raised' %>
  </div>
<% end %>
