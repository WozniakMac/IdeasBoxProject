<section class="mdl-grid mdl-grid--no-spacing mdl-shadow--2dp mdl-cell--3-col-desktop mdl-cell--4-col-tablet mdl-cell--12-col-phone">
  <header class="ideashare-idea ideashare-idea-header section__play-btn mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone mdl-color-text--white ids-background-color">
    <div class="ideashare-idea-buttons">
      <div class="like idea-button">
        <i class="material-icons ripple-effect" data-ripple-color="#aed136" data-ripple-limit=".mdl-grid">thumb_up</i>
        <p><%= idea.like_counter %></p>
      </div>
      <div class="empty idea-button"></div>
      <div class="dislike idea-button">
        <i class="material-icons ripple-effect" data-ripple-color="#d13636" data-ripple-limit=".mdl-grid">thumb_down</i>
        <p><%= idea.dislike_counter %></p>
      </div>
    </div>
    <img class="ids-image-card" src="/images/slide1.jpg" alt="">
  </header>
  <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone ideashare-idea-content">
    <div class="mdl-card__actions">
      <%= link_to(truncate(idea.title, length: 40), [idea.box, idea]) %>
    </div>
  </div>
  <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="btn-<%= idea.id %>">
    <i class="material-icons">more_vert</i>
  </button>
  <ul class="mdl-menu mdl-js-menu mdl-menu--bottom-right" for="btn-<%= idea.id %>">
    <li class="mdl-menu__item">Edytuj</li>
    <li class="mdl-menu__item">Zgłoś</li>
    <li class="mdl-menu__item">Zmień status</li>
  </ul>
</section>