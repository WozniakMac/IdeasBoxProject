<% content_for :css do %>
    <%= stylesheet_link_tag    'card-empty', media: 'all' %>
    <%= stylesheet_link_tag    'session', media: 'all' %>
<% end %>

<% content_for :title do %>
    <%= t('idea.new') %>
<% end %>

<% content_for :content do %>
    <div class="mdl-layout__tab-panel is-active mdl-grid ids-content" id="content">
      <div class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone ids-background-white">
        <div class="ids-session">
          <%= render 'form' %>
        </div>
      </div>
    </div>
<% end %>

<% content_for :addbutton do %>
    <%= render "shared/navbar/button" %>
<% end %>

<% content_for :navbartop do %>
    <%= render "shared/navbar/top" %>
<% end %>