<%= form_for([:manager,@manager_box]) do |f| %>
  <% if @manager_box.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= t('manager.box.new.somethingwrong') %></h4>

      <ul>
      <% @manager_box.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => 10, :cols => 40, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit I18n.t('manager.box.form.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
