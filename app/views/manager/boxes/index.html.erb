<p id="notice"><%= notice %></p>
<div class="page-header">
    <h1><%= t('manager.box.index.title') %></h1>
</div>

<div id="ib-boxes" class="row">
  <% @manager_boxes.each do |manager_box| %>
  <div class="col-sm-6 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to(manager_box.name, [:manager,manager_box]) %></h3>
      </div>
      <div class="panel-body ib-panel-content">
        <%= manager_box.description %>
        <p class="ib-indexbutton btn-group" role="group">
          <%= link_to(I18n.t('manager.box.index.edit'), edit_manager_box_path(manager_box), class: "btn btn-primary" )%>
          <%= link_to(I18n.t('manager.box.index.info'), [:manager,manager_box], class: "btn btn-default" )%>
          <%= link_to(I18n.t('manager.box.index.open'), manager_box, class: "btn btn-default" )%>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
