<p id="notice"><%= notice %></p>

<h1>Listing Manager Boxes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manager_boxes.each do |manager_box| %>
      <tr>
        <td>
          <h1><%= manager_box.name %></h1>
          <p><%= manager_box.description %></p>
          <p><%= manager_box.user.email %></p>
        </td>
        <td><%= link_to 'Show', [:manager,manager_box] %></td>
        <td><%= link_to 'Edit', edit_manager_box_path(manager_box) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_manager_box_path %>
