<p id="notice"><%= notice %></p>

<h1>Listing Manager Ideas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manager_ideas.each do |manager_idea| %>
      <tr>
        <td><%= link_to 'Show', manager_idea %></td>
        <td><%= link_to 'Edit', edit_manager_idea_path(manager_idea) %></td>
        <td><%= link_to 'Destroy', manager_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

