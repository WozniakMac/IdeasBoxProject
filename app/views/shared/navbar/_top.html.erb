<nav class="mdl-navigation">
  <%= link_to(I18n.t('navbar.left.home'), root_path , class: 'mdl-navigation__link') %>
  <%= link_to(I18n.t('navbar.left.table'), table_ideas_path , class: 'mdl-navigation__link') %>
  <%= link_to(I18n.t('navbar.left.boxes'), boxes_path , class: 'mdl-navigation__link') %>
  <%= link_to(I18n.t('navbar.left.top'), top_path , class: 'mdl-navigation__link') %>
