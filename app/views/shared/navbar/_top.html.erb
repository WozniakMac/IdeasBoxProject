<nav class="mdl-navigation mdl-ideashare-right-menu">
  <% if current_user.nil? %>
      <%= link_to(I18n.t('navbar.right.signin'), new_user_session_path, class: 'mdl-navigation__link') %>
      <%= link_to(I18n.t('navbar.right.signup'), new_user_registration_path, class: 'mdl-navigation__link' )%>
  <% else %>
      <%= link_to(current_user,'#', class: 'mdl-navigation__link')%>
      <a class="mdl-navigation__link" id="session-menu-button"><%= image_tag(current_user.get_avatar(:thumb), height: 40, width: 40, class: 'img-circle') %></a>
      <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
          for="session-menu-button">
        <%= link_to(I18n.t('navbar.right.editprofile'), edit_user_registration_path, class: 'mdl-menu__item') %>
        <%= link_to(I18n.t('navbar.right.logout'),destroy_user_session_path, method: :delete, class: 'mdl-menu__item') %>
