<% content_for :css do %>
    <%= stylesheet_link_tag    'card-table', media: 'all' %>
<% end %>

<% content_for :title do %>
    <%= t('table.table') %>
<% end %>

<% content_for :content do %>
    <div class="mdl-layout__tab-panel is-active mdl-grid ids-content" id="content">
      <section class="section--center mdl-grid">
        <h3 class="mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">Lubisz :)</h3>
        <section class="section--center mdl-grid mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <% @liked_ideas.each do |idea|%>
              <%= render 'ideas/idea_table', idea: idea %>
          <% end %>
          <section class="mdl-grid mdl-grid--no-spacing mdl-shadow--2dp mdl-cell--3-col-desktop mdl-cell--4-col-tablet mdl-cell--12-col-phone">
          </section>
        </section>
        <div class="mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <%= paginate @liked_ideas, :param_name => :liked %>
        </div>
        <h3 class="mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">Twoje pomys≈Çy</h3>
        <section class="section--center mdl-grid mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <% @user_ideas.each do |idea|%>
              <%= render 'ideas/idea_table', idea: idea %>
          <% end %>
          <section class="mdl-grid mdl-grid--no-spacing mdl-shadow--2dp mdl-cell--3-col-desktop mdl-cell--4-col-tablet mdl-cell--12-col-phone">
          </section>
        </section>
        <div class="mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <%= paginate @user_ideas, :param_name => :user %>
        </div>
      </section>
    </div>
<% end %>

<% content_for :addbutton do %>
    <%= render "shared/navbar/button" %>
<% end %>

<% content_for :navbartop do %>
    <%= render "shared/navbar/top" %>
<% end %>

<% content_for :leftnav do %>
    <%= render "table/down" %>
<% end %>