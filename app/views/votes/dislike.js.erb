function setCounters() {
  $('.buttons-<%= @idea.id %>').each(function() {
    var likeButton = $(this).find('.like');
    likeButton.find('p').text('<%= @idea.like_counter %>');
    likeButton.find('a').removeClass('ids-active');
    var dislikeButton = $(this).find('.dislike');
    dislikeButton.find('p').text('<%= @idea.dislike_counter %>');
    dislikeButton.find('a').addClass('ids-active')
  });;
}

setCounters();