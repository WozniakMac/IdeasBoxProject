function setCounters() {
    var idea = $('#idea-<%= @idea.id %>');
    var likeButton = idea.find('.ib-like-button');
    likeButton.find('.badge').text('<%= @idea.like_counter %>');
    likeButton.removeAttr('disabled');
    var dislikeButton = idea.find('.ib-dislike-button');
    dislikeButton.find('.badge').text('<%= @idea.dislike_counter %>');
    dislikeButton.attr('disabled','disabled');
}

setCounters();