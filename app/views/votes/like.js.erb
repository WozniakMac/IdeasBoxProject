function setCounters() {
    var idea = $('#buttons-<%= @idea.id %>');
    var likeButton = idea.find('.like');
    likeButton.find('p').text('<%= @idea.like_counter %>');
    likeButton.find('a').attr('disabled','disabled');
    var dislikeButton = idea.find('.dislike');
    dislikeButton.find('p').text('<%= @idea.dislike_counter %>');
    dislikeButton.find('a').removeAttr('disabled');
    dislikeButton.removeAttr('disabled');
}

setCounters();